{
    "name": "ut4/radcms",
    "description": "RadCMS is simply the most radical CMS ever created.",
    "type": "project",
    "require": {
        "php": ">=7.2",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-fileinfo": "*",
        "psr/log": "^1.1",
        "monolog/monolog": "^1.25",
        "ut4/pike": "0.7.0",
        "phpmailer/phpmailer": "~6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "laminas/laminas-dom": "^2.7"
    },
    "suggest": {
        "ext-zip": "To use Packager, PackageInstaller or UpdateInstaller."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {"RadCms\\": "src/"}
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --bootstrap ./tests/bootstrap.php"
    }
}
