{
    "name": "ut4/radcms",
    "description": "RadCMS is simply the most radical CMS ever created.",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ut4/pike"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-fileinfo": "*",
        "psr/log": "^1.1",
        "monolog/monolog": "^1.25",
        "ut4/pike": "0.2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {"RadCms\\": "src/"}
    },
    "require-dev": {
        "phpunit/phpunit": "7.*"
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --bootstrap ./tests/bootstrap.php"
    }
}
